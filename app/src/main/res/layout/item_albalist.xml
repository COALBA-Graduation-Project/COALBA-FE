<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_albalist_main"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/girl"
        android:layout_marginStart="24dp"
        android:layout_marginVertical="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_albalist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="송이커피 숙대점"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/iv_albalist_main"
        app:layout_constraintTop_toTopOf="@id/iv_albalist_main"
        app:layout_constraintBottom_toBottomOf="@id/iv_albalist_main"/>

    <ImageView
        android:id="@+id/iv_albalist_detail"
        android:layout_width="16dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_detail"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_albalist_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_albalist_name"/>

    <View
        android:id="@+id/ll_albalist"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D9D9D9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>